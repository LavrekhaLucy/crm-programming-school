{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.ts",

    "!main.ts",
    "!seed.ts",
    "!app.module.ts",
    "!typeorm.module.ts",

    "!**/*.module.ts",
    "!**/*.repository.ts",
    "!**/*.entity.ts",

    "!**/database/**",
    "!**/migrations/**",

    "!**/dto/**",
    "!**/models/**",

    "!**/configs/**",
    "!**/helpers/**",
    "!**/filters/**",

    "!**/decorators/**",

    "!**/env.service.ts"
  ],


  "coverageThreshold": {
    "global": {
      "branches": 30,
      "functions": 80,
      "lines": 60,
      "statements": 60
    }
  },
  "silent": true,
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/"
  ]

}
