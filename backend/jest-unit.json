{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
    "!**/index.ts",
    "!**/*.module.ts",
    "!**/*.repository.ts",
    "!**/database/**/*"
    ],
  "coverageThreshold": {
    "global": {
      "branches": 30,
      "functions": 80,
      "lines": 60,
      "statements": 60
    }
  },
  "silent": true,
  "collectCoverage": true,
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "main.ts",
    "seed.ts",
    "/dto/",
    "/models/",
    "/configs/",
    "/helpers/",
    "/filters/",
    "env.service.ts"
  ]
}
