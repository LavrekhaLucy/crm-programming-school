{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
    "!**/index.ts",
    "!**/*.module.ts",
    "!**/*.repository.ts",
    "!**/database/**/*"
    ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "silent": true,
  "collectCoverage": true,
  "coverageDirectory": "../coverage"
}
